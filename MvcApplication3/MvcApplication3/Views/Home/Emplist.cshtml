@model IEnumerable<Practice.Models.Employement>    


@{
     WebGrid grid = new WebGrid(Model,canSort:true,canPage:true,rowsPerPage:4);

}
<h2>EmployeeList</h2>
<!DOCTYPE html>

<html>
<head>
    <title>WebgridSample</title>
    <script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>    
    <style type="text/css">
        .webGrid { margin: 4px; border-collapse: collapse; width: 500px;  background-color:#FCFCFC;}
        .header { background-color: #C1D4E6; font-weight: bold; color: #FFF; }
        .webGrid th, .webGrid td { border: 1px solid #C0C0C0; padding: 5px; }
        .alt { background-color: #E4E9F5; color: #000; }
        .gridHead a:hover {text-decoration:underline;}
        .description { width:auto}
        .select{background-color: #389DF5}
    </style>
</head>
<body>
@grid.GetHtml(
        headerStyle: "header",
    tableStyle: "tableStyle",
    alternatingRowStyle: "alternateStyle", 

    //fillEmptyRows: true,

    mode: WebGridPagerModes.All,
    firstText: "<< First",
    previousText: "< Prev",
    nextText: "Next >",
    lastText: "Last >>",
    columns: new [] {
        
        grid.Column("Emp_Name",header:"Name"),

        grid.Column("Emp_address",header:"Address", canSort: false),
        grid.Column("Designation",header:"Designation"),
         grid.Column("salary",header:"salary"),
          grid.Column("Active",header:"Active"),
           grid.Column("Date",header:"Date"),       

        grid.Column("", 
                    header: "Actions",
                    format: @<text>
                                @Html.ActionLink("Edit", "EmployeelistEdit", new { id = item.Id })
                                |
                                @Html.ActionLink("Delete", "EmployeeDelete", new { id = item.Id })
                            </text>
        )
})
</body>
</html>

